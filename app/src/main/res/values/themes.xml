<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PrinterDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/theme</item>
    </style>

    <style name="Theme.PrinterDemo" parent="Base.Theme.PrinterDemo">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BaseButton">
        <item name="android:background">@drawable/click</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:onClick">onViewClick</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Button2" parent="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="MaterialButton">
        <item name="android:textSize">20dp</item>
        <item name="android:onClick">onViewClick</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:onClick">onViewClick</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

</resources>